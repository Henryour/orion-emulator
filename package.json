{
  "name": "orion-emulator-monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && yarn build:docker",
    "build:docker": "docker build -t open-hotel/sirius-emulator .",
    "run:docker": "docker run --rm -it open-hotel/sirius-emulator:latest",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.5.3",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.8.3",
    "@nestjs/websockets": "^6.8.3",
    "arangojs": "^6.11.1",
    "cli-table3": "^0.5.1",
    "console-png": "^1.2.1",
    "dotenv": "^8.1.0",
    "ms": "^2.1.2",
    "ora": "^3.4.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "socket.io-msgpack-parser": "^2.2.0",
    "uuid": "^3.3.3",
    "ws": "^7.1.2",
    "yargs-parser": "^13.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.10.2",
    "@nestjs/testing": "6.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "2.0.7",
    "@types/ws": "^6.0.3",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "^4.0.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
